@page "/events/{Id:int}"
@using EventEase.Models
@using EventEase.Services
@inject NavigationManager Nav

<h3>Event Details</h3>

@if (evt is null)
{
    <p>Event not found.</p>
    <button class="btn btn-secondary" @onclick="GoBack">Back to Events</button>
}
else
{
    <div class="card p-3">
        <h5 class="mb-2">@evt.Name</h5>
        <div><strong>Date:</strong> @evt.Date.ToString("yyyy-MM-dd")</div>
        <div><strong>Location:</strong> @evt.Location</div>

        <div class="mt-3 d-flex gap-2">
            <button class="btn btn-outline-secondary" @onclick="GoBack">Back</button>
            <button class="btn btn-outline-success" @onclick="GoRegister">Register</button>
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Event? evt;

    protected override void OnParametersSet()
    {
        evt = EventRepository.GetById(Id);
    }

    private void GoBack()
        => Nav.NavigateTo("/events");

    private void GoRegister()
        => Nav.NavigateTo($"/events/{Id}/register");
}
